generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model Students {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  email     String   @unique
  class     String
  teacherId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id         String   @id @default(uuid())
  name       String
  subject    String
  experience Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
